<header>

  <nav class="navbar navbar-expand-lg navbar-light bg-warning">
      <div class="navbar-brand">
        <%= link_to root_path do %>
          <%= image_tag "anicheck.png" %>
        <% end %>
      </div>

      <div class="search-menu">
      <%= form_with url: "/search", method: "get", local: true do |form| %>
          <%= form.search_field :keyword, placeholder: "作品・ユーザーを検索", value: @keyword, size: "50" %>
          <button id="search-btn" type="submit"><i class="fa fa-search"></i></button>
        <% end %>
      </div>

        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>

            <% if current_user.admin? %>
              <li class="nav-item">
                <div class="nav-link"><%= link_to "作品登録",   new_item_path, :style=>"color:black;" %></div>
              </li>
              <li class="nav-item">
                <div class="nav-link"><%= link_to "作品一覧",   items_path, :style=>"color:black;" %>
                </div>
              </li>
            <% end %>

            <li class="nav-item">
              <div class="nav-link">
                <%= link_to user_path(current_user), :style=>"color:black;" do %>
                  <i class="fa fa-user"></i> <%= current_user.name %>
                <% end %>
                </div>
            </li>
            <li class="nav-item">
              <div class="nav-link">
                <%= link_to notifications_path, :style=>"color:black;" do %>
                  <i class="fa fa-bell"></i> 通知
                <% end %>
                </div>
            </li>
            <li class="nav-item">
              <div class="nav-link">
                <%= link_to destroy_user_session_path, :method => :delete, :style=>"color:black;" do %>
                  <i class="fa fa-sign-out"></i> ログアウト
                <% end %>
                </div>
            </li>

            <% else %>
            <li class="nav-item">
              <div class="nav-link">
                <%= link_to new_user_registration_path, :style=>"color:black;" do %>
                  <i class="fa fa-user-plus"></i> 新規登録
                <% end %>
                </div>
            </li>
            <li class="nav-item">
              <div class="nav-link">
                <%= link_to new_user_session_path, :style=>"color:black;" do %>
                  <i class="fa fa-sign-in"></i> ログイン
                <% end %>
                </div>
            </li>
            <% end %>
        </ul>
  </nav>

</header>
