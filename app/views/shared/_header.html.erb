<header>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand"><%= link_to 'Anicheck', root_path %></a>

      <div class="search-menu">
      <%= form_with url: "/search", method: "get", local: true do |form| %>
          <%= form.search_field :keyword, placeholder: "作品・タグ・ユーザーを検索", value: @keyword %>
          <button id="search-btn" type="submit"><i class="fa fa-search"></i></button>
        <% end %>
      </div>

        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>

            <% if current_user.admin? %>
              <li class="nav-item">
                <a class="nav-link"><%= link_to "作品登録",   new_item_path %></a>
              </li>
            <% end %>

            <li class="nav-item">
              <a class="nav-link"><%= link_to "作品一覧",   items_path %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link"><%= link_to "プロフィール", user_path(current_user) %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></a>
            </li>

            <% else %>
            <li class="nav-item">
              <a class="nav-link"><%= link_to '新規登録', new_user_registration_path %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link"><%= link_to 'ログイン', new_user_session_path %></a>
            </li>
            <% end %>
        </ul>
    </div>
  </nav>

</header>
