  $(".show-comments-<%= @comment.id %> .commentlike-area").css('display', 'inline');
  $(".show-comments-<%= @comment.id %> .comment-content").html('<%= j(simple_format(@comment.content)) %>');
  $(".show-comments-<%= @comment.id %> .comment-content").css('display','inline');
});
